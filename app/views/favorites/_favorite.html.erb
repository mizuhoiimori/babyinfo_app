<% if item.favorited_by?(current_user) %>
  <%= link_to item_favorites_path(item), method: :delete, remote: true do %>
  <i class="fas fa-heart" style="color:red;"></i>
  <span id="fav-red"><%= item.favorites.count %></span>
  <% end %>
<% else %>
  <%= link_to item_favorites_path(item), method: :post, remote: true do %>
  <i class="far fa-heart color:blue;"></i>
  <span id="fav-blue"><%= item.favorites.count %></span>
  <% end %>
<% end %>